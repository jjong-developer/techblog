{
    "hosting": {
        /*
            firebase hosting 배포 경로
        */
//        "public": "public",
        /*
            vue build 배포 경로
            firebase hosting + vue 합친 배포 경로 싱크 맞춤
        */
        "public": "./dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
